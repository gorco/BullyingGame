{
	"bed":{
		"root": {
			"type": "dialog",
			"fragments": [{
				"tag": "Tú",
				"msn": "He de irme."
			}]
		}		
	},
	"init":{
		"root": {
			"type": "fork",
			"options": [{
				"next": "node0",
				"condition": "varObject('global', 'NotRepeatedDaysNonStatic') == false"
			}]
		},
		"node0": {
			"type": "dialog",
			"fragments": [{
				"tag": "Tú",
				"msn": "Hoy el móvil marca bien el día."
			},
			{
				"tag": "Tú",
				"msn": "¿Qué fue lo de ayer?"
			},
			{
				"tag": "Tú",
				"msn": "¿Ayer fue un sueño? ¿Lo fue el día anterior?"
			},
			{
				"tag": "Tú",
				"msn": "¿Me estoy volviendo <$ if(varObject('global', 'MaleSexNonStatic')==true, 'loco', 'loca') $>?"
			}]
		}
	},
	"wardrobeInside1":{
		"root": {
			"type": "dialog",
			"fragments": [{
				"tag": "Tú",
				"msn": "Por ahora no necesito nada que pueda estar ahí dentro."
			}]
		}		
	},
	"wardrobeInside2":{
		"root": {
			"type": "dialog",
			"fragments": [{
				"tag": "Tú",
				"msn": "No tengo ganas de ordenar ahora."
			}]
		}		
	},
	"bag":{
		"root": {
			"type": "dialog",
			"next": "node1",
			"fragments": [{
				"tag": "Tú",
				"msn": "Cogeré todo para marcharme."
			}]
		},
		"node1": {
			"type": "event",
			"event": {
				"name": "pick",
				"var": "BagPicked",
				"value": true
			}
		},
	},
	"computer":{
		"root": {
			"type": "dialog",
			"next": "node1",
			"fragments": [{
				"tag": "Tú",
				"msn": "Si lo enciendo ahora seguro que se me hace tarde."
			},
			{
				"tag": "Tú",
				"msn": "Será mejor que me espere a por la tarde."
			},
			{
				"tag": "PC",
				"msn": "¿Quieres encender el ordenador?"
			}]
		},		
		"node1": {
			"type": "options",
			"questionId": "turnOnPC",
			"options": [{
				"next": "node1a",
				"msn": "Sí"
			},
			{
				"next": "node1b",
				"msn": "No"
			}]
		},
		"node1a": {
			"type": "event",
			"next": "moveCamera",
			"event":{
				"name": "computerON"
			}
		}, 
		"moveCamera": {
			"type": "event",
			"next": "changeHour",
			"event":{
				"name": "move camera",
				"key": "computer"
			}
		},
		"changeHour": {
			"type": "event",
			"event":{
				"name": "change variable",
				"var": "hour",
				"value": "8:10",
			}
		},
		"node1b": {
			"type": "dialog",
			"fragments": [{
				"tag": "Tú",
				"msn": "Lo mejor será que me vaya."
			}]
		}		
	},
	"plug":{
		"root": {
			"type": "dialog",
			"next": "node1",
			"fragments": [{
				"tag": "Tú",
				"msn": "¿Dejo el móvil cargando?"
			}]
		},		
		"node1": {
			"type": "options",
			"questionId": "plugInMobile",
			"options": [{
				"next": "node1a",
				"msn": "Sí"
			},
			{
				"next": "node1b",
				"msn": "No"
			}]
		},
		"node1a": {
			"type": "event",
			"event": {
				"name": "change state",
				"var": "ChargingMobile",
				"value": true,
				"state": 0
			}
		}, 
		"node1b": {
			"type": "event",
			"event": {
				"name": "change state",
				"var": "ChargingMobile",
				"value": false,
				"state": 1
			}
		}		
	},
	"livingroomDoor" : {
		"root": {
			"type": "event",
			"event": {
				"name": "move camera",
				"key": "livingroom"
			}
		}
	}
}